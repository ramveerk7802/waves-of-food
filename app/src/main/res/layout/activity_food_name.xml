<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg_card"
    tools:context=".Activity.FoodNameActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/logo"
        android:scaleType="fitEnd"
        android:alpha="0.02"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/black"
        android:hint="Food name"
        android:textStyle="bold"
        android:textAlignment="center"
        app:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="@id/itemNameText"
        app:layout_constraintEnd_toEndOf="@id/itemNameText"
        app:layout_constraintTop_toBottomOf="@id/itemNameText">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pizza_banner_a"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintTop_toBottomOf="@id/cardview"
        android:orientation="vertical">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short Description"
            app:fontFamily="@font/lato_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="5dp"
            android:letterSpacing="0.05"
            android:textSize="16sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ghejkd"
            app:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:letterSpacing="0.05"
            android:padding="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"

            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            app:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:textSize="16sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:letterSpacing="0.05"
            android:padding="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintEnd_toEndOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        android:fontFamily="@font/lato_regular"
        android:letterSpacing="0.05"
        app:backgroundTint="@color/green2"
        android:layout_marginTop="20dp"
        android:text="Add To Cart"/>




</androidx.constraintlayout.widget.ConstraintLayout>